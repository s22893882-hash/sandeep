# ===========================================
# Docker Environment Variables
# ===========================================
# IMPORTANT: Do NOT commit this file with real secrets to version control!
# Copy .env.example to .env.docker and fill in your values.
# ===========================================

# Environment
ENVIRONMENT=development

# MongoDB Configuration
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=password123
MONGO_INITDB_DATABASE=appdb
DATABASE_URL=mongodb://admin:password123@mongodb:27017/appdb?authSource=admin

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=redis-password

# Security Secrets - CHANGE THESE IN PRODUCTION!
JWT_SECRET=your-jwt-secret-change-in-production-min-32-chars
OTP_SECRET=your-otp-secret-change-in-production-min-32-chars
API_KEY=your-api-key-change-in-production

# Application Settings
LOG_LEVEL=info
DEBUG=false
