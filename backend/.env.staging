# Staging Environment Configuration
ENVIRONMENT=staging
DEBUG=false

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database
DATABASE_URL=postgresql+asyncpg://user:password@staging-db.example.com:5432/app_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis
REDIS_URL=redis://staging-redis.example.com:6379/0
REDIS_POOL_SIZE=20

# Security
SECRET_KEY=staging-secret-key-change-in-production-12345
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=["https://staging.example.com"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# API Documentation
DOCS_ENABLED=true
DOCS_URL=/docs
REDOC_URL=/redoc

# External Services
STRIPE_API_KEY=sk_test_xxxxx
AWS_REGION=us-east-1
S3_BUCKET=app-staging
